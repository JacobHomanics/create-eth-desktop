{
  "name": "create-eth-desktop",
  "productName": "Create ETH Desktop",
  "private": true,
  "version": "0.1.0",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "electron:build": "tsc -p electron/tsconfig.electron.json",
    "electron:dev": "npm run electron:build && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build": "vite build && tsc -p electron/tsconfig.electron.json",
    "start": "electron .",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "build": {
    "appId": "com.createeth.desktop",
    "productName": "Create ETH Desktop",
    "directories": {
      "output": "dist-electron",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "mac": {
      "icon": "oafDdm4Y_400x400.jpg",
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "icon": "oafDdm4Y_400x400.jpg",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "oafDdm4Y_400x400.jpg",
      "category": "Development",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "cross-env": "^7.0.3",
    "electron": "^31.0.0",
    "electron-builder": "^24.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  }
}
